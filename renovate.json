{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":dependencyDashboard",
    ":semanticCommits",
    ":automergeDigest",
    ":automergeBranch"
  ],
  "schedule": [
    "before 6am on monday"
  ],
  "timezone": "UTC",
  "labels": [
    "dependencies"
  ],
  "assignees": [
    "phajsi"
  ],
  "reviewers": [
    "phajsi"
  ],
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true,
      "automergeType": "branch"
    },
    {
      "automerge": true,
      "automergeType": "branch",
      "matchPackageNames": [
        "/^@types//"
      ]
    },
    {
      "matchDepTypes": [
        "dependencies"
      ],
      "matchPackageNames": [
        "react",
        "react-dom"
      ],
      "groupName": "React core packages",
      "automerge": false
    },
    {
      "matchPackageNames": [
        "typescript"
      ],
      "automerge": false
    },
    {
      "matchPackageNames": [
        "react-scripts"
      ],
      "automerge": false
    }
  ],
  "vulnerabilityAlerts": {
    "enabled": true
  },
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": [
      "before 6am on monday"
    ]
  },
  "prConcurrentLimit": 5,
  "prHourlyLimit": 2,
  "enabledManagers": [
    "npm"
  ],
  "rangeStrategy": "bump"
}
